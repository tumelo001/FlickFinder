@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Watchlist";
}
<div class="my-5 d-flex flex-row">
    <a class="btn btn-warning" asp-action="Index" asp-controller="Home">Back to home</a>
    <h4 class="ms-3 pt-1">My Watchlist</h4>
</div>
@if (Model.Count() != 0)
{
    <div class="row mt-5 d-flex justify-content-center">
        @foreach (var movie in Model)
        {
            @await Html.PartialAsync("_MovieCard", movie);
        }
    </div>
}
else
{
    <div class="mt-5 pt-5 d-flex justify-content-center text-muted fs-3">Watchlist is empty</div>
}

