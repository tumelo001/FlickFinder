@model Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="d-flex details-movie-card rounded-3 mt-5">
    <img src="https://image.tmdb.org/t/p/w500/@Model.Poster" alt="@Model.Title" />
    <div class="m-4">
        <h1>@Model.Title</h1>
        <div class="text-muted">
            <span class="border-1 border-light rounded-3">@Model.Rated</span> |
            <span>@Model.Released</span> |
            <span>@Model.Runtime</span> |
            <span>@Model.Genre</span>
        </div>
        <div class="text-warning my-3">
            @if (Model.Rating != "N/A")
            {
                @for (int i = 0; i < Convert.ToInt32(Math.Round(double.Parse(Model.Rating))); i++)
                {
                    <i class="fa-solid fa-star "></i>
                }@for (int i = 0; i < 10 - Convert.ToInt32(Math.Round(double.Parse(Model.Rating))); i++)
                {
                    <i class="fa-regular fa-star"></i>
                }
            }
        </div>
        <p>@Model.Plot</p>
        <div class="text-muted">
        <p class="mt-3 mb-0">Director: @Model.Director</p>
        <p class="">Actors: @Model.Actors</p>
        </div>
        <div class="mt-4">
            <a class="btn btn-outline-warning" asp-action="Index" asp-controller="WatchList" asp-route-id="@Model.MovieId"><i class="fa-solid fa-bookmark"></i> Add to WatchList</a>
            <a class="btn btn-outline-warning" asp-action="Index"><i class="fa-solid fa-heart"></i></a>
            <a class="btn btn-outline-warning" asp-action="Index"><i class="fa-solid fa-share"></i></a>
        </div>
    </div>
</div>
<div class="mt-5">
    <a class="btn btn-warning" asp-action="Index" asp-controller="Home" asp-route-id="@Model.Title">Back to List</a>
</div>



