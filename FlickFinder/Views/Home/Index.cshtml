</div>
<div class="mb-5">
    <h3 class="mt-5">Upcoming</h3>
    @await Html.PartialAsync("_MovieCarousel", Model.Upcoming,  new ViewDataDictionary(ViewData) { { "Id4", ViewData["Id"] = "c4"}})
</div>

<div class="mb-5">
    <h3 class="mt-5 ">Top Rated</h3>
    @await Html.PartialAsync("_MovieCarousel", Model.TopRated,  new ViewDataDictionary(ViewData) { { "Id5", ViewData["Id"] = "c5"}})
</div>


