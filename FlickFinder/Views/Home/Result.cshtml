@model Movie

<h4>Movie</h4>
<hr />

<div class="card bg-dark mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.Poster" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.Title)</h5>
                <p class="card-text">@Html.DisplayFor(model => model.Year)</p>
                <p class="card-text"><small class="text-muted"> @Html.DisplayFor(model => model.Rated)</small></p>
            </div>
        </div>
    </div>
</div>
